            shell32.lib User32.lib ole32.lib Gdi32.lib wsock32.lib Dbghelp.lib rpcrt4.lib kernel32.lib 
        </Libs>
        
        <CompilerFlags>  
            -DUNICODE -D_WCHAR_T_DEFINED
        </CompilerFlags>
        
        <LinkerFlags>
            /NODEFAULTLIB         
        </LinkerFlags>
    </BuildOptions>

     
